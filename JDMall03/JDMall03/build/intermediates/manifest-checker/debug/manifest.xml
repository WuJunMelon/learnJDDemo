<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.m520it.jdmall03"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.m520it.jdmall03.activity.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- singleTop一般 为了防止多次启动同一个页面 会用singleTop模式 -->
        <activity
            android:name="com.m520it.jdmall03.activity.LoginActivity"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.m520it.jdmall03.activity.RegistActivity"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.m520it.jdmall03.activity.MainActivity"
            android:launchMode="singleTask" >
        </activity>

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.m520it.jdmall03.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>